extends base.pug

block style
    style
        include ../static/style.css
        include ../static/stylecontact.css

block script
    script(src="static/index.js")

block content
    .container
        h1 Contact Us
        form(action="/contact", method="post", class="myform")
            input(type="text", class="myinput", name="name", placeholder="Enter Your Name")
            input(type="text", class="myinput", name="phonenumber", placeholder="Enter Your PhoneNumber")
            input(type="text", class="myinput", name="gender", placeholder="Enter Your gender")
            input(type="text", class="myinput", name="address", placeholder="Enter Your Address")
            input(type="text", class="myinput", name="more", placeholder="Enter Your Repo")
            button(type="submit", class="btn")
                |Submit